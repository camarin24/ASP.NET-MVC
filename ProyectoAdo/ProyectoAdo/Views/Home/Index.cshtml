@model IList<ProyectoAdo.Models.Employee>
@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1>ASP.NET</h1>
    <p class="lead">ASP.NET is a free web framework for building great Web sites and Web applications using HTML, CSS and JavaScript.</p>
    <p><a href="http://asp.net" class="btn btn-primary btn-lg">Learn more &raquo;</a></p>
</div>
<table>
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Apellido</th>
            <th>Salario</th>
            <th>Genero</th>
        </tr>
    </thead>
    @foreach (var elem in Model)
    {
        <tr>
            <td>@Html.ActionLink(elem.FirstName,"Detail",new { id= elem.ID })</td>
            <td>@Html.DisplayFor(m => elem.LastName)</td>
            <td>@Html.DisplayFor(m => elem.Salary)</td>
            <td>@Html.DisplayFor(m => elem.Gender)</td>
            <td>@Html.DisplayFor(m => elem.DepartmentId)</td>
        </tr>

    }
</table>